<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rateus"
    android:background="#311432">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Rate Us"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <RelativeLayout
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="@drawable/add_memoryrect"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rateus_img"
            android:layout_width="295dp"
            android:layout_height="255dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="00dp"
            android:src="@drawable/rateus_icon" />

        <RatingBar
            android:id="@+id/rtngBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playstore"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/signin_inputshape"
            android:numStars="5"
            android:layout_centerHorizontal="true"
            android:progressBackgroundTint="#F6E2E2"
            android:progressTint="#FFC107"
            android:rating="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rateus_img"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/anton"
            android:text="Your Opinion Matters to Us!!"
            android:textColor="#57485B"
            android:textSize="25sp" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rtngBar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:background="@drawable/signin_button"/>

        <ImageView
            android:id="@+id/playstore"
            android:layout_width="284dp"
            android:layout_height="142dp"
            android:layout_below="@id/rateus_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/playstore" />

    </RelativeLayout>
</RelativeLayout>